{
  "compilerOptions": {
    "baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@content/*": ["src/content/*"],
      "@public/*": ["public/*"]
		},
    
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts", "src/**/*.graphql"]
}
